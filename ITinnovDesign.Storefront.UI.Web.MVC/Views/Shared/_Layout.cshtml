<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITinnovDesign.Storefront.UI.Web.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
@using ITinnovDesign.Storefront.Controllers.ViewModels.ProductCatalog
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <span>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ITInnovDesign Agatha's Clothing Store</a>
                    <img alt="Agatha's Clothing Store" src="~/Content/Images/Structure/lg_logo.png" />
                </span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                   
                   <partial name="_loginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" id="main">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">

        <div class="container">
            <partial name="_SiteFooter" />

        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="~/Scripts/jquery-1.4.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.8.1.custom.min.js"></script>
    <script src="~/Scripts/jquery-jtemplates.js"></script>
    <script src="~/Scripts/json2.js"></script>
    <script src="~/Scripts/agatha-common-scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
