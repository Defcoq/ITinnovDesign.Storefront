@using ITinnovDesign.Storefront.Services.ViewModels;
@using ITinnovDesign.Storefront.Controllers.ViewModels.CustomerAccount;
@model ITinnovDesign.Storefront.Controllers.ViewModels.CustomerAccount.CustomersOrderSummaryView

<h2>Your Orders</h2>

<ul>
    @foreach(OrderSummaryView order in Model.Orders)
    {
    
    <li>
        @Html.Encode(order.Created.ToLongDateString()) 
        @if (order.IsSubmitted == false){ 
        @Html.ActionLink("Pay", "CreatePaymentFor", "Payment", new { orderId = order.Id}, null)
        } 
        @Html.ActionLink("View Detail", "Detail", "Order",
        new { orderId = order .Id}, null)
    </li>
    }
</ul>